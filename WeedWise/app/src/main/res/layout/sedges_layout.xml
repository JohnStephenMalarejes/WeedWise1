<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SedgesData.SedgesDisplay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/detailImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        />
    </FrameLayout>

    <TextView
        android:id="@+id/detailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="result "
        android:gravity="center"
        android:textColor="@color/font_color"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        app:fontFamily="@font/manjari"
        />
    <TextView
        android:id="@+id/local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Name: "
        android:textColor="@color/font_color"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/manjari" />

    <TextView
        android:id="@+id/family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family: "
        android:textColor="@color/font_color"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/manjari" />

    <TextView
        android:id="@+id/eppoCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EPPO Code: "
        android:textColor="@color/font_color"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/manjari" />

    <TextView
        android:id="@+id/morphological"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morphological Classification: "
        android:textColor="@color/font_color"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/manjari" />

    <TextView
        android:id="@+id/grows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Grows in: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/manjari" />

    <TextView
        android:id="@+id/lifeCycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Cycle: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/manjari" />

    <TextView
        android:id="@+id/reproduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Means of Reproduction:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/manjari" />

    <TextView
        android:id="@+id/characteristic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Distinguishing Characteristics: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/manjari" />

    <TextView
        android:id="@+id/impact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Reported impacts on rice: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/manjari" />
</LinearLayout>
</ScrollView>