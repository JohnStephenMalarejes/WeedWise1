<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".MorphologicalData.HabitatFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/tab_color"
                android:text="C. Based on Habitat"
                app:fontFamily="@font/manjari"
                android:textStyle="bold"
                android:textSize="26sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Aquatic"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:fontFamily="@font/manjari"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/aquatic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                app:fontFamily="@font/manjari"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Semi-aquatic"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:fontFamily="@font/manjari"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/semi_aquatic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                app:fontFamily="@font/manjari"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. Terrestrial"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:fontFamily="@font/manjari"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/terrestrial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="?"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                app:fontFamily="@font/manjari"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</FrameLayout>