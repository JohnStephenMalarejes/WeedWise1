<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="RoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>
    <style name="fontStyle" parent="">
        <item name="android:fontFamily">@font/manjari</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>

    </style>
    <style name="fontStyle1" parent="Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/manjari</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <!-- Change the color of the tab indicator (underline) when selected -->
        <item name="tabIndicatorColor">@color/toolbar</item>
    </style>

    <style name="TransparentToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/transparent</item>
    </style>
    

</resources>